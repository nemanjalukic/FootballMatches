@model FootballMathces.Models.Team

@{
    ViewData["Title"] = "Details";
    Layout = null;
}
<div class="modal fade" id="add-team" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Team Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div>
                    <dl class="row">
                        <dd class="col-sm-5">
                            <img src="@Url.Content("~/img/" + Model.Logo)" height="100" />
                        </dd>
                        <dt class="col-sm-7">
                            @Html.DisplayFor(model => model.Name)
                        </dt>
                    </dl>
                </div>
                <div style=" height: 250px; overflow-y: auto;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Players)
                                </th>
                                <th>
                                    Action
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Players)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <button type="button" id="addP" class="btn btn-primary" data-toggle="ajax-modal" data-target="#delete-player" data-url="@Url.Action($"Delete/{item.Id}","Players")">Remove</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="addP" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-player" data-url="@Url.Action($"Edit/{Model.Id}","Players")">Add</button>
            </div>
        </div>
    </div>
</div>
