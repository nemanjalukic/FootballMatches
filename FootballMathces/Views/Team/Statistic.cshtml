@model IEnumerable<FootballMathces.Models.Team>

@{
    IEnumerable<Player> players = ViewData["Players"] as IEnumerable<Player>;
}
<h2>Teams</h2>
<div style=" height: 250px; overflow-y: auto;">
    <table class="table" style=" height: 250px; overflow-y: auto;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Wins)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Losses)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Draws)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Wins)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Losses)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Draws)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <h2>Players</h2>
    <div style=" height: 250px; overflow-y: auto;">
        <table class="table">
            <tr>
                <th>Player</th>
                <th>Matches</th>
                <th>Goals</th>
                <th>Team</th>
            </tr>
            @foreach (Player player in players)
            {
                <tr>
                    <td>@player.Name</td>
                    <td>@player.Matches</td>
                    <td>@player.Goals</td>
                    <td>@player.Team.Name</td>
                </tr>

            }
        </table>
    </div>
