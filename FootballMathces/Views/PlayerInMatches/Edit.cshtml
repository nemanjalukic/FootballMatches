@model FootballMatches.Models.PlayerInMatch

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="modal fade" id="add-goal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add goal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style=" height: 300px; overflow-y: auto;">
                <div class="row justify-content-center">
                    <div class="col-md-4 text-center justify-content-center align-self-center">
                       
                            <h2>@ViewData["Name"]</h2>
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="MatchId" />
                                <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
                            </form>
                       
                     </div>   
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>

        </div>
    </div>
</div>

